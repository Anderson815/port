{
  "version": "0.2.0",
  "configurations": [
    {
      "name":"Attach to NestJS",
      "type":"node",
      "request":"attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to NestJS (Docker)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/app",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
